{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Build and Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.exe", // Path to the output executable
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // Adjust to your gdb.exe path
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}
